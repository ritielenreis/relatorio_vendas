create schema loja;

create table controle_caixa(
	ID_NF int not null,
	ID_ITEM int not null,
	COD_PROD int not null,
	VALOR_UNIT decimal(6,2) not null,
	QUANTIDADE int not null,
	DESCONTO int null
	);

insert into controle_caixa values
	(1, 1, 1, 25.00, 10, 5),
	(1, 2, 2, 13.50, 3, null),
	(1, 3, 3, 15.00, 2, null),
	(1, 4, 4, 10.00, 1, null),
	(1, 5, 5, 30.00, 1, null);

